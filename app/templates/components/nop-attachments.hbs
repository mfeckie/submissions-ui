{{#if readonly}}
  {{#if attachments}}
    You have provided the following attachments:
    <ul class='bullets'>
      {{#each attachments as |attachment|}}
        <li>{{or attachment.name '-'}}</li>
      {{/each}}
    </ul>
  {{else}}
    You have chosen not to provide any additional attachments with this submission
  {{/if}}
  {{nop-errors errors=errors}}
{{else}}
  {{#each attachments as |document index|}}
    {{#nop-document document=document
                    canRemove=true
                    showRemove=true 
                    removeDocument='removeAttachment'}}
      {{nop-input label='How is this document related to the Environment Plan?'
                  value=document.relationship
                  required=true}}
    {{/nop-document}}
  {{/each}}
  {{nop-document-uploader documentAdded="addAttachment"}}
{{/if}}
