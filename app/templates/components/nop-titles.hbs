{{#if readonly}}
  {{#each titles.titles as |title index|}}
    {{nop-title title=title readonly=readonly errors=errors}}
  {{/each}}

  <!-- {{nop-errors errors=errors}} -->
{{else}}
  {{#each titles.titles as |title index|}}
    <section>
      <h5 class='title-title'>Title {{counter index}}</h5>
      {{nop-title title=title}}
    </section>
  {{/each}}

  {{nop-add-another action='addTitle' text='Add another Title' class='add-another-title'}}
{{/if}}
