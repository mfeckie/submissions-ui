{{#if readonly}}
  {{#if documents.faDeclaration}}
    {{nop-document document=documents.faDeclaration}}
  {{/if}}
{{else}}
  {{nop-attach-document document=documents.faDeclaration
                        instruction='Drop environment plan here or click to upload'
                        instructionHint='Please submit in Adobe Portable Format (.pdf) or an image (.jpg, .jpeg, .png)'
                        accepts='.pdf,.jpg,.jpeg,.png'
                        errors=documents.errors
                        errorKey='faDeclaration'
                        required=true}}
{{/if}}
