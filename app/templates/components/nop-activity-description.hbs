{{nop-input class='activity-name' label='Activity Name' name='activity-name' required=true value=submission.name}}
{{nop-textarea class='activity-description' label='Activity Description'
                                            name='activity-description'
                                            value=submission.description
                                            required=true
                                            rows=10
                                            hint='Describe the activity in 200 to 500 words. This information will be published on the NOPSEMA website'}}
{{nop-attach-image label='Location of Activity (attach location map)' document=locationMap}}
{{nop-radio-group class='activity-regulation-type' label='What type of activity is this?'
                                                   value=submission.regulationType
                                                   required=true
                                                   options=regulationTypes}}
{{nop-radio-group class='offshore-project' label='Is any part of the activity an offshore project?'
                                           value=submission.hasOffshoreProject
                                           options=trueOrFalse}}
{{nop-info-box title='What is an Offshore Project?' info='An Offshore Project means undertaking activities defined in regulation 4 of OPPX'}}
{{#if submission.hasOffshoreProject}}
  {{nop-radio-group class='opp' label='Is there an accepted Offshore Project Proposal (OPP)?'
                                               hint='(As accepted under regulation 5D)'
                                               value=submission.hasOPP
                                               options=trueOrFalse}}
  {{nop-radio-group class='environment-minister-decision' label='Is there a decision by the Environment Minister for the activity?'
                                               hint='As per sub-regulations 9(3) and 17(3)'
                                               value=submission.hasEnvironmentMinisterDecision
                                               options=trueOrFalse}}
{{/if}}
{{#if showReferenceNumber}}
  {{nop-input class='reference-number' label='Please provide OPP document reference or EPBC reference number' name='reference-number' value=submission.OPPOrEPBCReferenceNumber}}
{{/if}}
