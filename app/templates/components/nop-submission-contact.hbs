{{#if readonly}}
  {{#nop-review-component title='Submission Contact'}}
    {{nop-person-details person=submission.submissionContact readonly=true}}

    {{nop-errors errors=errors}}
  {{/nop-review-component}}
{{else}}
  {{nop-person-details person=submission.submissionContact}}

  {{nop-checkbox label='I am also the Nominated Liaison person for this activity' checked=submission.sameAsLiaison}}
  {{nop-checkbox label='I am also the day-to-day contact person for this activity' checked=submission.sameAsActivity}}
{{/if}}
