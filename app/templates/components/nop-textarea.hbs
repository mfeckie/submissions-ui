{{#if hint}}
  <div class='hint'>{{hint}}</div>
{{/if}}
{{textarea id=(concat elementId '-' name) rows=rows required=required value=value}}
<label for="{{concat elementId '-' name}}">{{label}}</label>
<span class="highlight" />
<div class="errors">
  {{#if errorMessage}}
    {{ errorMessage }}
  {{/if}}
</div>
