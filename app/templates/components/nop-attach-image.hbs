{{nop-label forElementId=(concat elementId '-' name)
            label=label
            required=required
            errorMessage=errorMessage}}
{{#if document}}
  {{#nop-document document=document 
                 canRemove=true
                 showIcon=false
                 removeDocument="removeDocument"}}
    <img class="image-preview" src="{{document.preview}}"/>
  {{/nop-document}}
{{/if}}
{{#unless document}}
  {{nop-document-uploader
                 defaultInstruction=dropZoneInstruction
                 hint='Please submit a file in the JPEG (.jpg, .jpeg) or PNG (.png) formats.'
                 documentAdded="addDocument"
                 accept='.jpg,.jpeg,.png'}}
{{/unless}}
