{{#if label}}
  <label class="{{if required 'required'}}">{{label}}</label>
{{/if}}
{{#if hint}}
  <div class='hint'>{{hint}}</div>
{{/if}}
<div>
  {{#each options as |option index|}}
    {{nop-radio label=option.label value=option.value checked=value name=option.name disabled=option.disabled}}
  {{/each}}
</div>
{{#if errorMessage}}
  <div class="errors">
    {{ errorMessage }}
  </div>
{{/if}}
