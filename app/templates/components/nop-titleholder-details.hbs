{{#if readonly}}
  <div>
    {{nop-text-field class='titleholder-detail_name' label='Business Name' value=titleholder.name}}
    {{nop-text-field class='titleholder-detail_abn' label='ABN' value=titleholder.abn}}
    {{nop-text-field class='titleholder-detail_acn' label='ACN' value=titleholder.acn}}
  </div>
  <div>
    {{nop-address title='Registered Business Address' address=titleholder.businessAddress readonly=true}}
    {{nop-address title='Postal Address' address=titleholder.postalAddress readonly=true}}
  </div>
{{else}}
  {{nop-input label='Business Name'
              name='name'
              required=true
              value=titleholder.name
              errors=titleholder.errors
              errorKey='name'}}
  {{#unless noInfo}}
    {{nop-info-box title='What\'s a Titleholder?' info='Explain what this is in simple and legal terms.'}}
  {{/unless}}
  <div class='company-numbers'>
    {{nop-input label='Australian Business Number (ABN)'
                name='company-number_abn'
                value=titleholder.abn
                errors=titleholder.errors
                errorKey='abn'}}
    {{nop-input label='Australian Company Number (ACN)'
                name='company-number_acn'
                value=titleholder.acn
                errors=titleholder.errors
                errorKey='acn'}}
  </div>
  {{nop-address title='Registered Business Address' required=true address=titleholder.businessAddress allowPOBox=false}}
  {{nop-address title='Postal Address' address=titleholder.postalAddress allowPOBox=true}}
{{/if}}
