{{#if readonly}}
  <div>
    {{nop-text-field class='titleholder-detail_name'
                     label='Business name'
                     value=titleholder.name
                     errors=titleholder.errors
                     errorKey='name'}}
    {{nop-text-field class='titleholder-detail_abn'
                     label='ABN'
                     value=titleholder.abn}}
    {{nop-text-field class='titleholder-detail_acn'
                     label='ACN'
                     value=titleholder.acn}}
  </div>
  <div>
    {{nop-address title='Registered business address' address=titleholder.businessAddress readonly=true}}
    {{nop-address title='Postal address' address=titleholder.postalAddress readonly=true}}
  </div>
{{else}}
  {{nop-input label='Business name'
              name='name'
              required=true
              value=titleholder.name
              errors=titleholder.errors
              errorKey='name'}}
  <div class='company-numbers'>
    {{nop-input label='Australian Business Number (ABN)'
                name='company-number_abn'
                value=titleholder.abn
                errors=titleholder.errors
                errorKey='abn'}}
    {{nop-input label='Australian Company Number (ACN)'
                name='company-number_acn'
                value=titleholder.acn
                errors=titleholder.errors
                errorKey='acn'}}
  </div>
  {{nop-address title='Registered business address'
                required=true
                address=titleholder.businessAddress
                allowPOBox=false}}
  {{nop-section-header title='Postal address' required=true}}
  {{nop-checkbox label='Same as business address?' checked=titleholder.sameAsBusiness}}
  {{#unless titleholder.sameAsBusiness}}
    {{nop-address title='' address=titleholder.postalAddress allowPOBox=true}}
  {{/unless}}
{{/if}}
