{{#nop-page title='Titles'
            class='titles-page'
            hint='These are the titles and activities covered in this submission. Add all of the titles that are covered by this submission.'}}
  {{#each model.titles as |title index|}}
    <section>
      <h5 class='title-title'>Title {{counter index}}</h5>
      {{nop-title title=title}}
    </section>
  {{/each}}

  {{nop-add-another action='addTitle' text='Add another Title' class='add-another-title'}}

  {{#nop-actions}}
    <button {{action 'goBack'}}>Back</button>
    <button class='primary' {{action 'goNext'}}>Next</button>
  {{/nop-actions}}
{{/nop-page}}
